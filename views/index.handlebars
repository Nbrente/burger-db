<h1>Burgers!</h1>

<h2>Burger that have yet to be devoured!</h2>

<script>console.log("during DOM load")</script>

<ul>
  {{#each burgers}}
    {{#unless isEaten}}
     {{> burgers/burger-block isEaten=0}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have sadly been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if isEaten}}
     {{> burgers/burger-block isEaten=1}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Make Burger</button>
</form>